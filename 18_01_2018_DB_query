create table TABLE_1 (
    serial_no number constraint table_1_pk primary key,
    corprate_name varchar2(12),
    production_name varchar2(12),
    Date_received date,
    assign_to varchar2(20),
    PSM varchar2(4000),
    Client_contact number,
    client_mail varchar2(30),
    PSM_Contact varchar2(10),
    PSM_mail varchar2(30),
    Remarks blob
);
/

### select statement
select SERIAL_NO,PRODUCTION_NAME,PSM_MAIL,DATE_RECEIVED,CLIENT_MAIL,PSM_CONTACT,PSM,REMARKS,CLIENT_CONTACT,CORPRATE_NAME,ASSIGN_TO
from  ONBOARD

### SELECT BY PRIMARY KEY

select PRODUCTION_NAME,PSM_MAIL,DATE_RECEIVED,CLIENT_MAIL,PSM_CONTACT,PSM,REMARKS,CLIENT_CONTACT,CORPRATE_NAME,ASSIGN_TO
from  ONBOARD
where SERIAL_NO = :SERIAL_NO


### INSERT
insert into ONBOARD (
 SERIAL_NO,PRODUCTION_NAME,PSM_MAIL,DATE_RECEIVED,CLIENT_MAIL,PSM_CONTACT,PSM,REMARKS,CLIENT_CONTACT,CORPRATE_NAME,ASSIGN_TO
) values (
  :SERIAL_NO,:PRODUCTION_NAME,:PSM_MAIL,:DATE_RECEIVED,:CLIENT_MAIL,:PSM_CONTACT,:PSM,:REMARKS,:CLIENT_CONTACT,:CORPRATE_NAME,:ASSIGN_TO
);


### UPDATE query

update  ONBOARD set
  PRODUCTION_NAME= :PRODUCTION_NAME,PSM_MAIL= :PSM_MAIL,DATE_RECEIVED= :DATE_RECEIVED,CLIENT_MAIL= :CLIENT_MAIL,PSM_CONTACT= :PSM_CONTACT,PSM= :PSM,REMARKS= :REMARKS,CLIENT_CONTACT= :CLIENT_CONTACT,CORPRATE_NAME= :CORPRATE_NAME,ASSIGN_TO= :ASSIGN_TO
where 
  SERIAL_NO = :SERIAL_NO
  
  ### Delete Query
  
  delete from ONBOARD  where SERIAL_NO = :SERIAL_NO
  
